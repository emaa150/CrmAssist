@model CMRmvc.ViewModel.EmailViewModel
@using CMRmvc.ViewModel
@{
    ViewData["Title"] = "Nuevo Mensaje";
    Layout = "~/Views/Email/_LayoutEmail.cshtml";
}
<form class="form-horizontal" method="post" asp-action="Create">

    <div class="card card-primary card-outline">
        <div class="card-header">
            <h3 class="card-title"><i class="far fa-paper-plane"></i> Nuevo Mensaje</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <div class="form-group">
                <input asp-for="Destinatario" class="form-control" placeholder="Para:">
                <span asp-validation-for="Destinatario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Asunto" class="form-control" placeholder="Asunto:">
                <span asp-validation-for="Asunto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <textarea id="compose-textarea"  asp-for="Mensaje"class="form-control" style="height: 300px">                            
            </textarea>
            </div>
            <div class="form-group">
                <div class="btn btn-default btn-file">
                    <i class="fas fa-paperclip"></i> Adjunto
                    <input type="file" asp-for="Adjuntos" name="attachment">
                </div>
                <p class="help-block">Max. 32MB</p>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <div class="float-right">
                <a class="btn btn-default" asp-action="Inbox" asp-controller="Email" asp-route-mytype="@TypeCorreo.Recibido"><i class="fas fa-pencil-alt"></i> Borrador</a>
                <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i> Enviar</button>
            </div>
            <a class="btn btn-default" asp-action="Inbox" asp-controller="Email" asp-route-mytype="@TypeCorreo.Recibido"><i class="fas fa-times"></i> Descartar</a>
        </div>
        <!-- /.card-footer -->
    </div>
    <!-- /.card -->
</form>