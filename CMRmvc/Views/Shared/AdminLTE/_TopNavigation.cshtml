@using Microsoft.AspNetCore.Identity
@{
    var Perfil = (string)ViewData["Perfil"];
}
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<!-- Navbar -->
<nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
    </ul>
    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a asp-action="Index" asp-controller="Roles" type="submit" class="nav-link btn btn-link text-dark">@Perfil</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline">
                <button id="logout" asp-controller="Account" asp-action="Logout" title="SALIR" type="submit" class="nav-link btn btn-link text-dark"><i class="fas fa-sign-out-alt"></i></button>
            </form>
        </li>
    </ul>
</nav>
<!-- /.navbar -->